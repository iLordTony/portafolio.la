@import "normalize.styl"
@import "slides.styl"
@import "fonts.styl"
@import "nib"

a
   text-decoration none

body
   font-family 'Roboto', sans-serif
   font-size 16px

.Footer
   background-image url('../images/bg2.jpg')
   background-repeat no-repeat
   background-position center
   background-size cover
   padding 2em 0
   text-align center

.Footer-form
   text-align center
   display inline-block

.Footer-left
   display inline-block
   max-width 30em
   text-align center
   vertical-align top

.Footer-title
   color white

.Footer-formInput,
.Footer-textArea
   background white
   border none
   display block
   border-radius 2em
   padding .5em 1em
   margin 0 auto 1em
   &:focus
      outline none

.Footer-textArea
   resize none

.Footer-button
   background orange
   border-radius 1em
   border none
   color white
   padding .5em 1em

.Header
   margin-top 3.75em
   background-image url('../images/portada.jpg')
   background-repeat no-repeat
   background-position center
   background-size cover
   text-align center
   padding 1.2em 0
   &-button
      background white
      border none
      border-radius 50%
      position fixed
      top 1em
      right 1em
      width 40px
      line-height 40px
      outline 0
      height 40px
      font-size 1.2em
      z-index 3
      display none
      box-shadow 2px 2px 2px 0px rgba(110, 110, 110, 0.5)

.Header-image
   border-radius 50%
   border 5px solid white

.Header-name, .Header-link
   color white

.Header-link
   font-size 2.2em
   font-weight bold

.Header-name
   font-size 1.5em
   font-weight 200
   margin 0

.MainMenu
   background #1E1E1E
   height 3.75em
   width 100%
   text-align center
   position fixed
   top 0
   z-index 3
   box-shadow 4px 4px 10px 0 rgba(50, 50, 50, 0.5)

.MainMenu-item
   display inline-block

.MainMenu-link
   color #00DBFF
   line-height 3.75em
   margin 0 0.5em
   &:hover
      color #fff

.MainMenu-list
   margin 0
   padding 0

.Profile
   text-align center
   padding 0 1em

.Profile-link
   color white
   display inline-block
   padding 0.5em 1em
   border-radius 2em
   margin 0.5em 0.5em
   &.facebook
      background #4862A3
   &.twitter
      background #55acee
   &.github
      background #829AAB

.u-title
   color #00CCFF
   border-bottom 1px dashed #00CCFF
   font-size 1.5em
   font-weight normal

.Work
   text-align center
   &-container
      display flex
      flex-wrap wrap
      justify-content space-around

.Work-imageDescription
   color #515151
   font-style italic

.Work-imageContainer
   margin 0

.Work-item
   display inline-block
   margin-bottom 1.5em

.slider
   background black
   &-container
      max-width 650px
      margin 0 auto
//desktop-first
@media screen and (max-width: 480px)
   .Profile
      &-link
         display block

@media screen and (max-width: 767px)
   .Footer
      &-form
         display block
      &-formInput
         width 90%
      &-textArea
         width 90%
   .Header
      margin-top 0
      &-button
         &.is-active
            display block
   .MainMenu
      height auto
      left -205px
      width 200px
      transition 0.3s
      &.is-active
         left 0
      &-item
         display block